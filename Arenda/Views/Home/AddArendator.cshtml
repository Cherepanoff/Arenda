@model Arenda.Models.Arendator
    @{
        ViewBag.Title = "Добавление арендатора";
    }
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="~/css/style.css" />
    </head>
    <form asp-controller="Home" asp-action="AddArendator">
        <div class="form-group">
            <label asp-for="ArendatorName" class="control-label">Название Арендатора</label>
            <input type="text" asp-for="ArendatorName" class="form-control" />
        </div>
        <div class="form-group">
            <select asp-for="ArendatorFloor">
                <option disabled>Выберите этаж</option>
                <option asp-for="ArendatorFloor">0</option>
                <option asp-for="ArendatorFloor">1</option>
                <option asp-for="ArendatorFloor">2</option>
                <option asp-for="ArendatorFloor">3</option>
                <option asp-for="ArendatorFloor">4</option>
                <option asp-for="ArendatorFloor">5</option>
                <option asp-for="ArendatorFloor">6</option>
            </select>
        </div>
        <div class="form-group">
            <select asp-for="ArendatorType">
                <option disabled>Выберите тип</option>
                <option  asp-for="ArendatorType">Обычный</option>
                <option  asp-for="ArendatorType">Островной</option>
                <option  asp-for="ArendatorType">ФудКорт</option>
            </select>
        </div>
        <div class="button-item">
            <input type="submit" value="Отправить" class="btn" />
        </div>
    </form>
