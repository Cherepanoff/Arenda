@using Arenda
@model IEnumerable<Arenda.Models.Arendator>
@{ ViewBag.Title = "Вся информация"; }
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="button-item">
        <a asp-controller="Information" asp-action="NewInfo" class="btn">Добавить(Редактировать) данные</a>
        <input type="button" class="btn" value="Добавить комментарий" onClick='addrow();'>
        <input type="button" class="btn" value="Удалить комментарий" onClick='deleterow();'>
        <input type="button" class="btn" value="Добавить комментарий(1)" onClick='addrow1();'>
        <input type="button" class="btn" value="Удалить комментарий(1)" onClick='deleterow2();'>

    </div>
    <div class="rightsidebar">
        <table class="content-table1" id="table1">
            <tr><td>ФИО</td><td><input type='text' name='2'></tr>
            <tr><td>Телефон</td><td><input type='text' name='2'></tr>
            <tr><td>Е-mail</td><td><input type='text' name='2'></tr>
            <tr><td>Комментарий</td><td><input type='text' name='2'></tr>
        </table>
    </div>
    @foreach (var info in Model)
    {
<h1>@info.ArendatorName</h1>
                <table id="table" class="content-table">
                    <tr><td>Юридическое лицо</td><td>@info.GeneralDirector</td>
                    <tr><td>Ген. директор</td><td>@info.LegalPerson</td></tr>
                    <tr><td>Номер договора</td><td>@info.NumberContract</td></tr>
                    <tr><td>Дата договора</td><td>@info.DateContract</td></tr>
                    <tr><td>Юр. Адрес</td><td>@info.AdressLegal</td></tr>
                    <tr><td>Факт. Адрес</td><td>@info.AdressFact</td></tr>
                    <tr><td>Акт допуска</td><td>@info.AdressFact</td></tr>
                    <tr><td>Акт о начале коммерческой деятельности</td><td>@info.AdressFact</td></tr>
                    <tr><td>Комментарий:</td><td></td></tr>
                    <tr><td><input type='text' name='1'></td></tr>
                </table>}
    <a asp-controller="Information" asp-action="Dogovor" class="btn">Информация о договоре</a>
    <a asp-controller="Information" asp-action="SpecConditions" class="btn">Спец условия</a>
    <h4>Договор</h4>
    <form asp-controller="Information" asp-action="UploadCondition"
          enctype="multipart/form-data" method="post">
        <input type="file" name="file" />
        <button type="submit" class="btn">Загрузить договор</button>
    </form>
    <div class="button-item">
        <h4>Изображение</h4>
        <!--       <a asp-controller="Information" asp-action="SpecConditions" class="btn">Загрузить изображение</a> -->
        <form asp-controller="Information" asp-action="UploadImage"
              enctype="multipart/form-data" method="post">
            <input type="file" name="file" />
            <button type="submit" class="btn">Загрузить изображение</button>
        </form>
    </div>
    @section scripts {
        <script>
            var UploadFile = function (e) {
                var file = e.target.files[0];

                var formData = new FormData();

                formData.append("file", file);

                axios.post("/Information/SingleFile", formData);
            }
        </script>
    }
    <script src="/js/site.js"></script>
</body>

